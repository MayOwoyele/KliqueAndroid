<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/video_icon"
            android:layout_width="@dimen/video_plus_image"
            android:layout_height="@dimen/video_plus_image"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/image_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/videocam_24px"
            app:tint="@color/background" />

        <TextView
            android:id="@+id/image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="image"
            android:textColor="@color/background"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/image_icon"
            app:layout_constraintStart_toStartOf="@id/image_icon"
            app:layout_constraintTop_toBottomOf="@id/image_icon" />

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="@dimen/video_plus_image"
            android:layout_height="@dimen/video_plus_image"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/video_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image_24px"
            app:tint="@color/background" />

        <TextView
            android:id="@+id/video_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="video"
            android:textColor="@color/background"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/video_icon"
            app:layout_constraintStart_toStartOf="@id/video_icon"
            app:layout_constraintTop_toBottomOf="@id/video_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>