<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bio_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header with gradient background -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="24dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile Image (circular) -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/book_background"
            android:scaleType="centerCrop"
            android:background="@drawable/circular_profile_image"
            android:clipToOutline="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:targetApi="21"/>

        <!-- Verified Icon -->
        <ImageView
            android:id="@+id/verified_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:src="@drawable/verified_24px"
            app:layout_constraintBottom_toBottomOf="@id/profile_image"
            app:layout_constraintEnd_toEndOf="@id/profile_image" />

        <!-- Full Name and Info -->
        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Full Name"
            android:textColor="@color/onPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            tools:layout_constraintStart_toStartOf="@id/profile_image" />

<!--        <ImageButton-->
<!--            android:id="@+id/info_icon"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:src="@drawable/ic_info"-->
<!--            android:background="?attr/selectableItemBackgroundBorderless"-->
<!--            app:tint="@color/onPrimary"-->
<!--            app:layout_constraintTop_toTopOf="@id/full_name"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/full_name"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            android:layout_marginEnd="16dp" />-->

        <!-- Contact status -->
        <TextView
            android:id="@+id/contact_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Not your contact"
            android:textColor="@color/onPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/full_name"
            app:layout_constraintTop_toBottomOf="@id/full_name" />

        <!-- Bio Text -->
        <TextView
            android:id="@+id/bio_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="15dp"
            android:text="Bio: Lorem ipsum dolor sit amet..."
            android:textColor="@color/onPrimary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/contact_status"
            app:layout_constraintTop_toBottomOf="@id/contact_status" />

        <!-- DM Icon -->
        <ImageButton
            android:id="@+id/bio_shots_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/shots_icon"
            android:src="@drawable/mail_24px"
            app:layout_constraintBottom_toBottomOf="@id/contact_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/contact_status"
            app:layout_constraintTop_toTopOf="@id/contact_status"
            app:tint="@color/onPrimary" />

        <!-- Spectator Count and Button -->
        <TextView
            android:id="@+id/spectator_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="No spectators"
            android:textColor="@color/onPrimary"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/spectator_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bio_text" />

        <Button
            android:id="@+id/spectator_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/primary"
            android:text="@string/leave_seat"
            android:textColor="@color/onPrimary"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@id/spectator_count"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tab Row -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_comment_background"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tab_gists"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/gist_tab_selected_shape"
            android:gravity="center"
            android:text="Gists"
            android:textColor="@color/onPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tab_clique"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/tab_clique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="Clique"
            android:textColor="@color/onPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tab_toggle"
            app:layout_constraintStart_toEndOf="@id/tab_gists"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />

        <ImageButton
            android:id="@+id/tab_toggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/keyboard_arrow_up_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tab_clique"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454"
            app:tint="@color/onPrimary" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bio_content_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tab_row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>