<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/g_input_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            layout="@layout/post_gist_input_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/gist_input_row"
            layout="@layout/message_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintStart_toStartOf="parent"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/active_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:background="@drawable/gradiented_square"
        android:text="20 active spectators"
        android:textColor="@color/onPrimary"
        app:layout_constraintBottom_toTopOf="@id/g_input_row_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar_gist_room"
        app:layout_constraintVertical_bias="0.80" />

    <include
        layout="@layout/video_plus_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/g_input_row_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/top_bar_gist_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/personal_chat_icon_size"
            android:layout_height="@dimen/personal_chat_icon_size"
            android:src="@drawable/arrow_back_24px" />

        <TextView
            android:id="@+id/gist_topic_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/onPrimary"
            android:textSize="20sp"
            tools:text="This is the topic. I said this is really the topic" />

        <ImageView
            android:id="@+id/the_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/star_filled"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/more_options_gist_chat"
            android:layout_width="@dimen/personal_chat_icon_size"
            android:layout_height="@dimen/personal_chat_icon_size"
            android:src="@drawable/more_vert_24px" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/comment_sheet_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:translationY="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar_gist_room"
        tools:visibility="gone">

        <include layout="@layout/coment_modal_bs" />
    </FrameLayout>

    <include
        android:id="@+id/topic_dialog"
        layout="@layout/topic_dialog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/g_input_row_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar_gist_room"
        tools:visibility="gone" />

    <include
        layout="@layout/ownership_dialog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/g_input_row_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar_gist_room" />

</androidx.constraintlayout.widget.ConstraintLayout>